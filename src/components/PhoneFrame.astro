---
interface Props {
  class?: string
}
const { class: className } = Astro.props
---

<div class:list={['phone-frame', className]}>
  <div class="phone-frame__phone relative w-[300px] bg-stone-950 border-[1.5px] border-solid border-stone-800 rounded-[40px] p-[6px] sm:w-[340px] sm:rounded-[46px] sm:p-[7px]">
    <div class="phone-frame__island absolute top-4 left-1/2 -translate-x-1/2 w-[72px] h-5 bg-black rounded-[10px] z-10 sm:top-[18px] sm:w-20 sm:h-[22px] sm:rounded-[11px]"></div>
    <div class="phone-frame__screen relative aspect-[9/19.5] rounded-[34px] overflow-hidden pointer-events-none sm:rounded-[39px]">
      <slot />
    </div>
  </div>
  <slot name="after" />
</div>

<style>
  .phone-frame__phone {
    box-shadow:
      0 25px 80px oklch(0% 0 0 / 0.6),
      0 0 60px color-mix(in oklch, var(--color-amber-500) 8%, transparent);
  }

  .phone-frame__screen {
    background: linear-gradient(180deg, var(--color-stone-900) 5%, var(--color-stone-950) 100%);
  }
</style>
